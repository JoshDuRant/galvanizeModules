function findShortestElement(arr) {
  // your code here
  if (arr.length === 0) {
      return '';
  }
  let shortestString = arr[0];
  for (let i = 0; i < arr.length; i++) {
      if (arr[i].length < shortestString.length) {
          shortestString = arr[i];
      }
  }
  return shortestString;
}
